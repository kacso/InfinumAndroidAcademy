<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.infinum.academy.danijel_sokac.task3" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activites.EditorActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activites.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activites.EditorActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.infinum.academy.danijel_sokac.task3.activites.EditorActivity" />
        </activity>
    </application>

</manifest>
